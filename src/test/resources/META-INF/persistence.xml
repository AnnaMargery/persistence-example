<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="test-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.luksze.Person</class>
        <class>org.luksze.VersionedPerson</class>
        <class>org.luksze.converters.DateAndTimeEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="cascade-pu" transaction-type="RESOURCE_LOCAL">

        <class>org.luksze.cascade.Address</class>
        <class>org.luksze.cascade.Employee</class>
        <class>org.luksze.cascade.Corporation</class>
        <class>org.luksze.cascade.Bride</class>
        <class>org.luksze.cascade.Groom</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:cascade-test"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        </properties>
    </persistence-unit>

</persistence>
